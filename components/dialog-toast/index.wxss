.dialog-toast-wrap {
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  z-index: 99999;
}
.dialog-toast-wrap.bottom {
  bottom: 150rpx;
}
.dialog-toast-wrap.top {
  top: 150rpx;
}
.dialog-toast-wrap.center {
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
}
.dialog-toast-wrap .dialog-toast-box {
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  animation: dialog-toast 0.3s;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.dialog-toast-wrap .dialog-toast-box.larg {
  min-height: 240rpx;
  min-width: 240rpx;
}
.dialog-toast-wrap .dialog-toast-icon {
  width: 72rpx;
  height: 72rpx;
}
.dialog-toast-wrap .dialog-toast-icon .image {
  width: 100%;
  height: 100%;
}
.dialog-toast-wrap .dialog-toast-icon + .dialog-toast-text {
  margin-top: 20rpx;
}
.dialog-toast-mask {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 99999;
  left: 0;
  top: 0;
}
@keyframes dialog-toast {
  0% {
    transform: scale(0);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}
